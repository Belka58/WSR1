<Page x:Class="WSR1.View.Pages.Menu.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSR1.View.Pages.Menu"
      mc:Ignorable="d" 
      d:DesignHeight="570" d:DesignWidth="1300"
      Title="MenuPage">

    <Grid>
        <Grid VerticalAlignment = "Center" HorizontalAlignment="Center" Width="400" Height="170">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Grid.Column="0" Grid.Row= "0" x:Name= "btnCheckListProduct" Margin= "10" Content= "Список товаров" Click= "btnCheckListProduct_Click" Grid.ColumnSpan= "2" />

            <Button Grid.Column= "0" Grid.Row= "1" x:Name= "btnEditListProduct" Margin= "10" Content= "Редактировать список товаров" Grid.ColumnSpan= "2" Click= "btnEditListProduct_Click" />
        </Grid>
    </Grid>
</Page>
